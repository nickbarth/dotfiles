#!/bin/bash

# fzf navigation
[ -f ~/.fzf.bash ] && source ~/.fzf.bash

f() {
  local dir args
	[ "$1" ] && args="-q $1"
  dir=$(find . -type d -print 2> /dev/null | fzf $args) &&
  cd "$dir"
}

u() {
  local dir args parents
	[ "$1" ] && args="-q $1"
	parents=$(while [ `pwd` != '/' ]; do cd .. && pwd 2> /dev/null; done);
	dir=$(echo $parents | tr ' ' "\n" | fzf $args) &&
	cd "$dir"
}

v() {
  local file args
	[ "$1" ] && args="-q $1"
  file=$(find . -not -path '*/\.*' -type f -print 2> /dev/null | fzf $args) &&
  vim "$file"
}
