! [~]$ xev # Detect Keycodes
clear Lock
clear Control
clear mod4
! Switch Control and Command Keys
keycode 133 = Control_L
keycode 37 = Super_L
add control = Control_L
add mod4 = Super_L
! Alt_R -> Mode_switch
keysym Alt_R = Mode_switch
! Capslock -> Escape Key
keycode 0x42 = Escape
! Alt_R + [ -> Page_Up
keycode 0x22 = 0x0005B 0x0007B Page_Up
! Alt_R + ] -> Page_Down
keycode 0x23 = 0x0005D 0x0007D Page_Down
! Super_R + f -> F11 ( Full Screen )
keycode 0x29 = 0x00066 0x00046 F11
