! [~]$ xev # Detect Keycodes
! Switch Command and Control Keys
remove control = Control_L
remove mod4 = Super_L Super_R
keysym Control_L = Super_L
keysym Super_L = Control_L
keysym Super_R = Control_L
add control = Control_L Control_R
add mod4 = Super_L Super_R
! Capslock -> Escape Key
clear lock
keycode 0x42 = Escape
! Alt_R + [ -> Page_Up
keycode 0x22 = 0x0005B 0x0007B Page_Up
! Alt_R + ] -> Page_Down
keycode 0x23 = 0x0005D 0x0007D Page_Down
! Super_R + f -> F11 ( Full Screen )
keycode 0x29 = 0x00066 0x00046 F11
